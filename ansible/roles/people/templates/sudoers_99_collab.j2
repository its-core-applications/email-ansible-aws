                    /usr/bin/bam, \
                    /usr/bin/gam, \
                    /usr/bin/gyb, \
                    /usr/bin/collab-*, \
                    /usr/bin/discussions-*, \
                    /usr/bin/google-*, \
                    /home/collaborate/examscan/exam_*

COLLAB          ALL=(collaborate)   NOPASSWD: COLLAB_TOOLS
