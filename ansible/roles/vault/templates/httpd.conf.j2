<VirtualHost *:80>
    ServerName vault.{{ subd }}
    Redirect permanent / https://vault.{{ subd }}/
</VirtualHost>

<VirtualHost *:443>
    ServerAdmin {{ ops_email }}
    ServerName vault.{{ subd }}
    ErrorLog /var/log/httpd/vault-error.log
    CustomLog /var/log/httpd/vault-access.log common
    SSLEngine on
    SSLProxyEngine on
    SSLCertificateFile /etc/pki/collab/private/vault.{{ subd }}.rsa.crt
    SSLCertificateKeyFile /etc/pki/collab/private/vault.{{ subd }}.rsa.key
    SSLCertificateFile /etc/pki/collab/private/vault.{{ subd }}.ecc.crt
    SSLCertificateKeyFile /etc/pki/collab/private/vault.{{ subd }}.ecc.key
    SSLProtocol all -SSLv3 -TLSv1 -TLSv1.1
    SSLCipherSuite ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-SHA384:ECDHE-RSA-AES256-SHA384:ECDHE-ECDSA-AES128-SHA256:ECDHE-RSA-AES128-SHA256
    SSLHonorCipherOrder on

    <Location />
        ProxyPass https://vault.{{ subd }}:8200/
        ProxyPassReverse https://vault.{{ subd }}:8200/
    </Location>
</VirtualHost>
