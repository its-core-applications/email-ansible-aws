module(load="omrelp")

action(
    type="omrelp"
    target="{{ syslog_server }}"
    port="2514"
    template="RSYSLOG_ForwardFormat"
    queue.type="LinkedList"
    queue.filename="forwarding"
    queue.size="99999"
    queue.maxDiskSpace="2G"
    Action.resumeRetryCount="-1"
    Action.resumeInterval="5"
)

