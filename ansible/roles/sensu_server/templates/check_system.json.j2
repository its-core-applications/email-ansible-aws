{
  "checks": {
    "load": {
      "command": "{{ sensu_plugin_path }}/check-load.rb -p -w 30,25,20 -c 35,30,25",
      "subscribers": [
        "Status_production"
      ],
      "interval": 60
    },
    "load-metrics": {
      "type": "metric",
      "command": "{{ sensu_plugin_path }}/metrics-load.rb",
      "subscribers": [
        "Status_production"
      ],
      "handler": "graphite",
      "interval": 60
    },
    "memory": {
      "command": "{{ sensu_plugin_path }}/check-memory-percent.rb",
      "subscribers": [
        "Status_production"
      ],
      "interval": 60
    }
  }
}
